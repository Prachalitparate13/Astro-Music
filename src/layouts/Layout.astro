---
import { ViewTransitions } from 'astro:transitions';

import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import Player from '../components/Player';
interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<meta name="description" content="This is music app made with Astro"/>
		<title>{title}</title>
		<ViewTransitions/>
	</head>
	<body
	class=" bg-white text-orange-400 work-sans leading-normal text-base tracking-normal ">
		<div>
			<Header/>
			<div>
				<slot/>
				<Footer/>
			</div>
			<div id="audio-player">
				<Player client:load transition:persist="player"></Player>
			</div>
		</div>
	</body>
</html>

