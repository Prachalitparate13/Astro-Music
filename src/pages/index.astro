---
import Layout from "../layouts/Layout.astro";
import Card from "../components/Card.astro";
const response = await fetch('https://music-api.charca.workers.dev/albums')
const albums = await response.json()
---

<Layout title="Astro Music">
  <section class="py-8">
    <div
      class="container mx-auto max-w-screen-lg px-6 flex items-center flex-wrap pt-4 pb-12"
    >
      <h1 class="text-orange-400 font-bold text-3xl tracking-tight mb-12">
        Recently Played <span class="sr-only"> Albums</span>
      </h1>
	  <div class="font-bold grid grid-cols-2 sm:grid-cols-2 md:grid-cols-4 gap-6">
		{
			albums.results.map((album:any)=>(
				<Card id={album.idAlbum}
				name={ album.strAlbum}
				artist={album.strArtist}
				image_url={album.strAlbumThumb}
				/>
			))
		}
	  </div>
    </div>
  </section>
</Layout>
